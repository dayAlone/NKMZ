#panel
	position: fixed
	width: 100%
	z-index: 100000000

html, body
	height 100%
body
	font-family 'HelveticaNeue', 'Helvetica Neue', 'Arial', sans-serif
	font-weight 300
	min-height 100%
	min-width 320px
	color black
	-webkit-font-smoothing: subpixel-antialiased
	background blue_bg
	font-size 13px
	@media (min-width: 375px)
		font-size 16px
	@media (min-width: scr_md)
		font-size 14px
	@media (min-width: scr_lg)
		font-size 15px
	@media (min-width: hide_feedback)
		font-size 16px
.container
	@media (min-width: scr_lg)
		width 100%
		width calc(100% - 30px)

svg
	t fill
	path, g
		t fill

.text
	h2, h3, h4
		font-weight 300
	h4
		font-size 24px
		margin-bottom 20px
	ul
		margin-bottom 30px
		padding-left 20px
		max-width 95%
		li
			margin-bottom 10px
	img
		max-width 100%
		width 100%
		@media (min-width: scr_md)
			width auto
		&.right
			float right
			margin-bottom 30px
			margin-left 35px
		&.left
			float left
			margin-bottom 30px
			margin-right 35px
		&.right, &.left
			@media (min-width: scr_md)
				max-width 45%
	.row
		margin-right -15px
		margin-left -15px
		> [class*='col-']
			padding-right 15px
			padding-left 15px
	a:not(.button)
		color blue
		border-line alpha(@color, .5)
		&:hover
			color blue2
			border-line alpha(@color, .5)
	p
		margin-bottom 25px
		color alpha(blue_bg, .8)
		&.highlight
			font-size 120%
			color blue2
			padding-left 80px
			position relative
			&:before
				position absolute
				width 55px
				content ""
				background blue2
				height 4px
				top 10px
				left 0
				@media (min-width: scr_md) and (max-width: scr_lg)
					top 8px

.search-page
	full-width()
	.page__divider
		margin 30px 0
	font-size 14px
	a
		color blue
		border-line alpha(@color, .5)
		&:hover
			color blue2
			border-line alpha(@color, .5)
	&__text
		display inline-block
		margin-top 10px
		@extend .text
	&__text, &__sort
		font-size 14px
	a&__title
		font-size 22px
		margin-bottom 8px
		color blue
		border-line alpha(@color, .5)
		&:hover
			color blue2
			border-line alpha(@color, .5)
		b
			font-weight normal
	small
		width 100%
		display inline-block
	form
		margin-top -15px
		margin-bottom 30px
		input[type=text]
			background transparent
			border 1px solid blue2
			height 35px
			min-width 40%
			line-height 35px
			border-radius 30px
			padding 2px 50px 0 20px

		button[type=submit]
			background transparent
			border 0
			margin-left -44px
			display inline-block
			svg
				position relative
				top 5px
				min-height 19px
				min-width 19px
				path
					fill blue2

.map-columns
	width 100%
	ul
		list-style none
	.map-level-0
		padding-left 0
		> li
			margin-bottom 35px
			> a
				font-size 22px
				color blue2
				font-weight 300

	.map-level-1
		padding-left 20px
		margin-top 10px
		> li
			margin-bottom 15px
			line-height 20px
			> a
				font-size 16px
				font-weight 300
				position relative
				&:before
					content "â€”"
					position absolute
					left -17px
					font-size 60%
					top -4px
			ul
				padding-left 20px
				margin-top 10px
				padding-bottom 0px
				li
					margin-bottom 4px


	a
		color blue_bg
		font-weight 300
		&:hover
			color blue

.dropdown
	position relative
	z-index 60
	&__select
		opacity 0
		position absolute
		z-index -1
		pointer-events none
		top 0
		left 0
		width 100%
		height 100%
		min-height 100%
		.mobile &
			z-index 20
			pointer-events all
	&__trigger
		position relative
		z-index 10
	&__frame
		z-index -1
		opacity 0
		position absolute
		t all
		pointer-events none
		top 0px
		left 0
		overflow hidden
		min-width 100%
		.mobile &
			display none !important
	&__item
		background-color gray
		display block
		line-height 1
		padding 10px 10px 7px
		font-size 12px
		width 100%
	 &--active
		z-index 700
		.dropdown
			&__frame
				pointer-events all
				z-index 1
				opacity 1
				top 100%


.scroll-fix
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 300000
	pointer-events none
	.bx-ie
		display none
	&--on
		pointer-events initial

.wrap
	full-width()
	min-height 100%
	padding-bottom 93px
	margin-bottom -93px
	@media (min-width: scr_md)
		padding-bottom 60px
		margin-bottom -60px
	position relative
	&:after
		content ""
		display block
	background-repeat no-repeat
	background-position center center

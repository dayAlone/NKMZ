.news
	&--index
		&.news
			position absolute
			bottom 80px
			margin-left 25px
		.news
			&-item
				max-width 95%
				@media (min-width scr_sm)
					max-width 55%
				@media (min-height: 700px)
					max-width 40%
				&__date
					font-size 11px
					
					opacity: .5
					margin-bottom 5px
					@media (min-height: 700px)
						font-size 12px
						margin-bottom 10px
				&__title
					font-weight: bold
					color black
					font-size 16px
					border-line alpha(@color,.3), 16px
					@media (min-height: 700px)
						font-size 17px
				&__content
					margin-top 7px
					max-height 88px
					overflow hidden
					font-size 13px
					line-height 18px
					a
						color black
						border-line(alpha(@color, .5))
						&:hover
							colore red
							border-line(alpha(@color, .5))
					@media (min-height: 700px)
						font-size 14px
						margin-top 12px
					
					
	&--list
		.page
			padding-top 40px
		.news
			&-item
				width 100%
				border 1px solid #b2b3b3
				padding 18px 15px 13px
				margin-bottom 30px
				min-height 78px
				t(all)
				overflow hidden
				&:not(.news-item--detail):hover
					border-color black
				&--open
					border-color black
					.news-item__title, .news-item__date
						color red
				&__divider
					border-top 1px solid #e2e5e8
					margin 30px 0 25px
					margin-right -15px
					margin-left -15px
				&__arrow
					display inline-block
					background transparent !important
					&:hover svg path
						fill red
				&__back
					text-transform: uppercase
					color black
					font-weight: bold
					font-size 12px
					margin-bottom 30px
					&:hover
						color red
						svg path
							fill red
					svg
						margin-right 3px
						transform rotate(-30deg)
				&__content
					margin-top 20px
					
					border-top 1px solid #e2e5e8
					padding 25px 20px 25px
					display none
					&--arrow
						padding-bottom 12px
					&--open
						display block
					img
						max-width 100%
						margin-top 5px
					p
						margin-bottom 18px
					font-size 15px
					font-weight 300
					&:last-of-type
						margin-bottom 0
					& + img
						margin-top 23px
					a
						cursor pointer
						font-weight: bold
						border-line(alpha(black, .2))
						color black
						&:hover
							color red
							border-line(alpha(red, .5))
				&__title, &__sub-title, &__date
					width 100%
					text-align: center
				&__title
					font-size 30px
					font-weight: bold
					margin-top 8px
					
					color black
					display block
					line-height 35px
					margin-bottom 0px
					padding 0 25px
					& + .news-item__content
						margin-top 15px
					&--disabled
						pointer-events none
					&--small
						font-size 19px
						line-height 1.3
						font-weight: normal
					a&
						cursor pointer
					a&:hover
						color red
				&__sub-title
					font-size 16px
					font-weight 300
					margin-top 2px
					color #737379
				&__date
					text-transform: uppercase
					letter-spacing 5px
					font-size 11px
					color #171929
					font-weight: bold
	.dropdown
		max-width 95px
		position relative
		z-index 250
		margin-bottom 25px
		@media (min-width scr_md)
			margin-bottom 0
		&__frame
			background red
			position absolute
			top 32px
			width 100%
			padding 4px 10px 2px
		&__item
			width 100%
			display inline-block
			color white
			font-size 12px
			font-weight: bold
		&--open
			.dropdown__trigger
				background red
				border-color red
				color white
				svg path
					fill white
		&__trigger
			border 1px solid black
			display block
			height 32px
			line-height 37px
			padding 0 10px
			position relative
			color black
			font-weight: bold
			font-size 13px
			z-index 5
			background white
			t(all)
			&:hover
				background red
				border-color red
				color white
				svg path
					fill white
			svg
				position absolute
				top 13px
				right 10px
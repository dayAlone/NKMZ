.content
	.news-list
		width 100%
		margin-bottom 50px
	.news
		margin-bottom 20px
		padding-top 25px
		position relative
		@media (min-width: scr_sm)
			padding-right 55px
		&:first-of-type
			padding-top 0px
		&:after
			position absolute
			width 24px
			height 24px
			background blue2 url("/layout/images/svg/right.svg") 9px 5px no-repeat
			content ""
			border-radius 25px
			right 0
			top 48px
			opacity 0
			t all
			transform scale(.5)
		&--active
			&:after
				transform scale(1)
				opacity 1
		& + .news
			border-top 1px solid #cbd2d7
		&__title
			font-size 16px
			line-height 1.3
			color blue2
			@media (min-width: scr_sm)
				font-size 20px
			&:hover
				color blue
		&__date
			font-size 12px
			margin-bottom 5px

.pages
	width 100%
	border-top 1px solid #cbd2d7
	padding 25px 0
	margin-top -20px

	&__item
		display inline-block
		color blue2
		font-size 14px
		padding 3px 4px 0
		min-width 25px
		text-align center
		border 1px solid transparent
		&:hover, &--active
			border-color blue2


.years
	text-align left
	max-width 90px
	height 34px
	display inline-block
	vertical-align middle
	@media (min-width: scr_sm)
		height 44px
		max-width 130px
	&:hover, &--active

		.dropdown
			&__trigger
				background-color blue
				border-color blue
				color white
				path
					fill white
	.dropdown
		&__item
			background-color blue
			font-size 15px
			padding-left 15px
			color white
			&:hover
				background-color blue2
		&__frame
			z-index 5
		&__trigger
			border 1px solid blue_bg
			color blue_bg
			display inline-block
			vertical-align top
			width 100px
			height 34px
			padding 0 15px
			position relative
			background-color #eceef1
			z-index  10
			line-height 37px
			@media (min-width: scr_sm)
				line-height 46px
				width 130px
				height 44px
			svg
				position absolute
				right 13px
				top 13px
				@media (min-width: scr_sm)
					top 18px

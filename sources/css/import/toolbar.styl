hide_feedback = 1555px
nav_rows = 1330px
.toolbar
	full-width()
	height 70px
	line-height 70px
	overflow hidden
	position relative
	font-weight 300
	background-color alpha(black, .8)
	position fixed
	z-index 1200
	/*&:after
		content ""
		position absolute
		top 99%
		width 100%
		height 1px
		background-color #CCC*/

	@media (min-width: scr_sm)
		position relative
		z-index 300
		background-color transparent
		height 110px
		line-height 108px
	svg
		display inline-block
		vertical-align middle
		line-height 1
	&__link
		color gray
		margin-left 20px
		font-size 16px
		position relative
		top 2px
		@extend .toolbar svg
		svg path
			fill blue
		&:hover
			color blue
			svg path
				fill blue2
	&__logo, &__api, &__nav
		float left
	&__contacts, &__tools
		float right
		min-height 1px
	&__logo, &__api
		width 120px
		@media (min-width: scr_sm)
			width 140px
		@media (min-width: scr_lg)
			width 160px
	&__api
		display none
		@media (min-width: scr_sm)
			display block
	&__contacts
		width 160px
		@media (min-width: hide_feedback)
			width 400px
	&__tools
		width 125px
		@media (min-width: scr_xs)
			width 205px
		@media (min-width: scr_md)
			width 130px
		@media (min-width: scr_lg)
			width 140px
	&__nav
		display none
		position relative
		top 1px
		@media (min-width: scr_md)
			display block
			width calc(100% - 560px)
		@media (min-width: scr_lg)
			width calc(100% - 620px)
		@media (min-width: hide_feedback)
			width calc(100% - 860px)
	&__block
		@extend .toolbar svg
		line-height 1
		.toolbar__link:first-of-type
			margin-left 0px
		position relative

		@media (max-width: hide_feedback)
			line-height 1.7
			.toolbar__link:last-of-type
				display none
	.api
		color gray
		white-space no-wrap
		@media (max-width: scr_xs)
			display none
		&__text
			@extend .toolbar svg
			text-align left
			white-space initial
			max-width 65px
			line-height 1.1
			font-weight 300
			border-left 1px solid gray
			padding-left 8px
			position relative
			padding-top 1px
			font-size 10px
			@media (min-width: scr_lg)
				font-size 11px
				max-width 80px
				line-height 1.3
		svg
			width 38px
			height 50px
			@media (min-width: scr_lg)
				width 44px
				height 59px
			path
				fill gray
	.logo
		margin-right 30px
		svg
			max-width 100%
			path
				fill white
	.nav
		@extend .toolbar svg
		line-height 2.2
		@media (max-width: nav_rows)
			max-width 500px
		&__item
			@extend .toolbar svg
			margin-left 30px
			color white
			font-size 17px
			line-height 1.5
			@media (min-width: scr_lg)
				font-size 20px
				margin-left 30px
			&:hover, &--active
				color blue
			&:first-child
				@media (min-width: scr_md) and (max-width: scr_lg)
					margin-right 14px
				@media (min-width: scr_lg) and (max-width: nav_rows)
					margin-right 17px
	.lang
		@extend .toolbar svg
		margin-right 3px
		&__trigger
			color gray
			font-size 10px
			font-weight 400
			margin-right 11px
			position relative
			padding-bottom 2px
			&:hover
				color blue
			&--active, &:hover
				border-bottom 1px solid blue
			&:first-of-type
				&:after
					content ""
					width 1px
					height 25px
					background-color white
					position absolute
					right -6px
					top -8px
					opacity .2
					@media (min-width: scr_lg)
						right -10px
			@media (min-width: scr_lg)
				margin-right 15px
			svg
				width 6px
				margin-left 15px
				path
					fill blue
	.nav-trigger
		color gray
		font-size 16px
		@extend .toolbar svg
		span
			display none
			@media (min-width: 375px)
				display inline
		svg
			border 1px solid #3e4654
			padding 10px 5px 9px
			box-sizing: content-box
			margin-left 10px
			path
				fill #75849d
			@extend .toolbar svg
		&:hover
			color blue
			svg
				border-color blue
				path
					fill blue
		@media (min-width: scr_md)
			display none

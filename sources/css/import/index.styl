.index
	.filter
		background-color #373f4e
		min-height 230px
		padding 1px 20px 30px
		&__title
			white-space no-wrap
			border-bottom 1px solid #595d69
			line-height 78px
			height 75px
			color white
			font-size 18px
			@media (max-width: 320px)
				height auto
				line-height 40px
				padding 15px 0
				font-size 20px
				.col-xs-6
					width 100%
					text-align center !important
		> .row
			@media (min-width: scr_sm) and (max-width: scr_lg)
				margin-top 25px
				.col-lg-3:not(.col-sm-4)
					width 50%
				.col-sm-6:nth-child(3), .col-sm-6:nth-child(4)
					margin-top 25px
			@media (min-width: scr_lg)
				margin-top 28px

		.dropdown
			margin-top 10px
			@media (min-width: scr_sm)
				margin-top 0px
			&__trigger
				width 100%
				background-color blue_bg
				display block
				padding 0 15px 0 15px
				font-size 17px
				color white
				position relative
				height 50px
				line-height 53px
				overflow hidden
				@media (min-width: scr_sm)
					padding 0 20px 0 10px
					font-size 13px
					height 30px
					line-height 33px
				@media (min-width: scr_lg) and (max-width: hide_feedback)
					font-size 11px
				svg
					position absolute
					right 15px
					top 22px
					@media (max-width: scr_sm)
						width 11px
						height 11px
					@media (min-width: scr_sm)
						right 10px
						top 12px
					path
						fill white
			&__frame
				max-height 96px
			&__item
				color white
				background-color blue
				font-size 16px
				padding-left 15px
				padding-right 15px
				@media (min-width: scr_sm)
					font-size 10px
					padding-left 10px
					padding-right 10px
				@media (min-width: scr_lg)
					font-size 12px
				&:hover
					background-color blue2
			&:hover
				.dropdown
					&__trigger
						background-color blue
		&__submit
			width 100%
			display block
			text-align center
			color white
			background-color blue
			margin-top 20px
			height 50px
			line-height 53px
			font-size 24px
			margin-bottom 15px
			@media (min-width: scr_sm)
				margin-top 0px
				margin-bottom 0px
				font-size 14px
				height 30px
				line-height 33px
			&:hover
				color white
				background-color blue2
		&__description
			color #a4acbb
			display block
			margin-top 1px
			font-size 13px
			@media (min-width: scr_sm)
				font-size 11px

		&__link
			white-space no-wrap
			color gray
			position relative
			top -2px
			font-size 12px
			@media (min-width: scr_sm)
				font-size 15px
			span
				border-line alpha(@color, .5)
			&:hover
				span
					color blue
					border-line alpha(@color, .5)
			svg
				margin-right 10px
				position relative
				top -1px
				display inline-block
				vertical-align middle
				@media (max-width: scr_sm)
					max-width 20px
				path
					fill blue


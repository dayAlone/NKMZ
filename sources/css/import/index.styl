		.page .row .col-lg-6
			&:first-of-type
				width (100/3)%
			&:last-of-type
				width (100/3)*2%*/
	.sections
		margin-bottom 10px
		.section
			width: 100%
			background #3e4654 url("/layout/images/catalog-bg.jpg")
			background-size cover
			position relative
			display inline-block
			overflow hidden
			min-height 340px
			@media (min-width: scr_lg)
				min-height 395px
			&__name
				position absolute
				width 100%
				left 0
				bottom 0
				background alpha(blue_bg, .9)
				padding 0 15px
				color white
				font-weight 300
				height 100px
				line-height 106px
				font-size 16px
				t background
				@media (min-width: hide_feedback)
					font-size 18px
					height 110px
					line-height 116px
				span
					display inline-block
					vertical-align middle
					line-height 1.3
			&__image
				position absolute
				width 100%
				height 100%

				background-repeat no-repeat
				background-size contain
				background-position center bottom
			&:hover
				.section
					&__name
						background alpha(blue, .9)

	.slider
		background-color #383f4e
		margin-bottom 15px
		@media (min-width: scr_md)
			margin-bottom 0px
		.fotorama
			&__stage, &__shaft
				height 0 !important
				min-height 430px
				t min-height
				@media (min-width: scr_sm)
					min-height 300px
				@media (min-width: scr_md)
					min-height 641px
		&__image
			position absolute
			top 0
			left 0
			height 100%
			width 100%
			z-index 1
			background-size cover
		&__content
			position relative
			z-index 3
			position absolute
			top 50%
			transform translateY(-50%)
			padding 0px 30px 0px
			margin-top 30px
			t margin-top
			@media (min-width: scr_sm)
				margin-top 0px
			@media (min-width: scr_md)
				max-width 550px
		&__item

			height 100%
			width 100%
			color white
			overflow hidden
			position relative
			text-align center
			@media (min-width: scr_sm)
				text-align left
			@media (min-width: scr_md)
				min-height 641px
		&__button
			display inline-block
			color white
			padding 0 25px
			font-size 16px
			min-width 160px
			text-align center
			height 40px
			line-height 44px
			background-color blue
			&:hover
				background-color blue2
				color white
		&__text
			margin-bottom 30px
			font-size 14px
			@media (min-width: 325px)
				font-size 16px
			@media (min-width: 380px)
				font-size 18px
			@media (min-width: scr_md)
				font-size 17px
				margin-bottom 45px
			@media (min-width: scr_lg)
				font-size 20px
		&__title
			line-height 1
			font-weight 300
			margin-bottom 25px
			font-size 28px
			margin-top 0px
			@media (min-width: 325px)
				font-size 33px
			@media (min-width: scr_sm)
				font-size 40px
			@media (min-width: scr_lg)
				font-size 55px

	.news-list
		&--mobile
			margin-top 15px
			@extend .index .filter
		&--slider
			position absolute
			left 0
			bottom 0
			padding 0px 37px 30px
			max-width 550px
			@media (min-height: 850px)
				&:before
					margin-bottom 40px
			&:before
				margin-bottom 20px
				display block
				content ""
				width 100%
				border-top 1px solid #5c606a
		font-size 12px
		font-weight 400
		&__title
			@extend .index .filter__title
		&__more
			font-size 12px
			color blue2
			border-line alpha(@color, .5)
			&:hover
				color blue
				border-line alpha(@color, .5)
		.news

			margin-top 30px
			@media (min-width: scr_sm)
				margin-top 0px
				margin-bottom 15px
			&__date
				color blue
				margin-bottom 8px
			&__title
				font-size 13px
				color white
				&:hover
					color blue
					border-line alpha(@color, .5)

@keyframes zoom
	from
		transform scale(1)
	to
		transform scale(1.1)

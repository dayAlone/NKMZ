.albums
	@media (min-width: scr_sm)
		margin-right -7px
		margin-left -7px
	.album
		float left
		width 20%
		height 200px
		width 100%
		background-size cover
		text-align: center
		position relative
		background-position center center
		@media (min-width: scr_xs)
			width calc(50% - 14px)
			margin 0 7px 10px 7px
		@media (min-width: scr_sm)
			width calc(33.3333333% - 14px)
		@media (min-width: hide_feedback)
			width calc(25% - 14px)

		&:after
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			background alpha(black, .8)
			content ""
		&:after, span
			t opacity
			opacity 0
		&:hover
			&:after, span
				opacity 1
		span
			z-index 2
			line-height 16px
			font-size 13px
			padding 0 20px
			position absolute
			top 50%
			transform translateY(-50%)
			left 0
			color white
			width 100%

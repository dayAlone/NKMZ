.button
	min-width 160px
	display inline-block
	height 40px
	line-height 43px
	padding 0 15px
	font-size 16px
	border 1px solid blue
	color blue
	text-align center
	&:hover
		color white
		background blue
	&--blue
		border-color blue2
		color blue2
		&:hover
			background blue2

.content
	&--modal
		overflow hidden

.gallery

	padding 15px 0 5px
	border-top 1px solid #cbd2d7
	border-bottom 1px solid #cbd2d7
	&__content
		margin-right -5px
		letter-spacing -1px
		margin-left -5px
	&__item
		background-size cover
		width calc(20% - 13px)
		height 60px
		display inline-block
		margin 0 5px 10px
		@media (max-width: scr_xs)
			width calc(33.3333% - 13px)

.modal-close
	@extend .button, .button:hover
	position absolute
	z-index 20
	right 40px
	top 40px
	&:hover
		background-color blue2
		border-color blue2

.page
	float left
	width 100%

	&__nav
		border-bottom 1px solid #cbd2d7
		padding 25px 0 13px
		margin-top -35px
		margin-bottom 35px
		@media (min-width: scr_sm)
			padding-top 16px
		.nav
			&__item
				color blue_bg
				margin-right 25px
				display inline-block
				font-size 14px
				@media (max-width: scr_sm)
					line-height 1.7
				@media (min-width: scr_lg)
					margin-right 13px
					font-size 12px
				@media (min-width: 1280px)
					font-size 13px
					margin-right 16px
				@media (min-width: 1360px)
					margin-right 25px
				@media (min-width: 1430px)
					margin-right 25px
					font-size 14px
				&--active
					color blue2
				&:hover
					color blue

				&:last-of-type
					margin-right 0px
	&__title
		border-bottom 1px solid #cbd2d7
		width 100%
		line-height 50px
		margin-bottom 25px
		padding 15px 0
		@media (min-width: scr_sm)
			padding 0
			height 85px
			margin-bottom 35px
			line-height 93px
		h1
			font-weight 300
			margin-top 0px
			color blue_bg
			display inline-block
			vertical-align middle
			margin-bottom 0px
			font-size 33px
			@media (min-width: scr_sm)
				font-size 40px
	&__content
		float left
		width 100%
	&__content, &__side, &__modal
		transition-property min-height, max-height
		transition-duration .3s
		@media (min-width: scr_md)
			max-height 560px
			overflow hidden

	&__side
		background-size cover
		background-position 98% center
		@media (min-width: scr_md)
			min-height 641px
		@media (min-width: scr_md) and (min-height: 700px)
			min-height calc(100vh - 172px)
	&__content, &__modal
		background-color #eceef1
		padding 70px 25px 20px
		min-height 641px
		@media (min-height: 700px) and (min-width: scr_md)
			min-height calc(100vh - 172px)
		@media (min-width: scr_sm)
			padding 10px 55px
	&__modal
		t all
		position fixed
		top 0
		z-index -1
		opacity 0
		pointer-events none
		max-height 100%
		left 0
		width 100%
		display none
		height 100%
		max-height 100vh
		transform translateY(-100px)
		overflow scroll
		-webkit-overflow-scrolling: touch;
		@media (min-width: scr_md)
			position absolute
			overflow hidden
			min-height 100%
			transform translateX(-100px)
			width calc(75% + 7px)
		@media (min-width: scr_lg)
			left 50%
			width 50%
		&--active
			pointer-events all
			opacity 1
			z-index 1000
			transform translateX(0px)  translateY(0px)
		&--text
			padding 100px 25px 70px
			border-left 1px solid blue_bg
			@media (min-width: scr_sm)
				padding 60px
			.close
				font-size 14px
				color blue2
				position relative
				border-line alpha(@color, .5)
				&:before
					width 25px
					height 25px
					background blue2 url("/layout/images/svg/close.svg") 7px center no-repeat
					content ""
					border-radius 25px
					position absolute
					left -35px
					top -6px
					t all
				&:hover
					color blue
					border-line alpha(@color, .5)
					&:before
						background-color blue
	@media (min-width: scr_md)
		&__content
			margin-right -7px
			float none
			width auto
		&__side
			margin-left -7px
	.container
		@media (min-width: scr_md)
			padding 0
			position relative

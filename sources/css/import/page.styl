.button
	min-width 160px
	display inline-block
	height 40px
	line-height 43px
	font-size 16px
	border 1px solid blue
	color blue
	text-align center
	&:hover
		color white
		background blue
.text
	.row
		margin-right -15px
		margin-left -15px
		> [class*='col-']
			padding-right 15px
			padding-left 15px
	a:not(.button)
		color blue
		border-line alpha(@color, .5)
		&:hover
			color blue2
			border-line alpha(@color, .5)
	p
		margin-bottom 25px
		color alpha(blue_bg, .8)
		&.highlight
			font-size 120%
			color blue2
			padding-left 80px
			position relative
			&:before
				position absolute
				width 55px
				content ""
				background blue2
				height 4px
				top 10px
				left 0
				@media (min-width: scr_md) and (max-width: scr_lg)
					top 8px

.page
	float left
	width 100%

	&__nav
		border-bottom 1px solid #cbd2d7
		padding 16px 0 13px
		margin-top -35px
		margin-bottom 35px
		.nav
			&__item
				color blue_bg
				margin-right 25px
				display inline-block
				@media (max-width: scr_sm)
					line-height 1.7
				@media (min-width: scr_sm)
					font-size 14px
				@media (min-width: scr_lg)
					margin-right 13px
					font-size 12px
				@media (min-width: 1280px)
					font-size 13px
					margin-right 16px
				@media (min-width: 1360px)
					margin-right 25px
				@media (min-width: 1430px)
					margin-right 25px
					font-size 14px
				&--active
					color blue2
				&:hover
					color blue

				&:last-of-type
					margin-right 0px
	&__title
		border-bottom 1px solid #cbd2d7
		width 100%
		height 85px
		line-height 93px
		margin-bottom 35px
		h1
			font-weight 300
			margin-top 0px
			color blue_bg
			display inline-block
			vertical-align middle
			margin-bottom 0px
			font-size 33px
			@media (min-width: scr_sm)
				font-size 40px
	&__content, &__side, &__modal
		transition-property min-height, max-height
		transition-duration .3s
		@media (min-width: scr_md)
			max-height 641px
			overflow hidden

	&__side
		background-size cover
		background-position right center
		@media (min-width: scr_md)
			min-height 641px
	&__content, &__modal
		background-color #eceef1
		padding 70px 25px 20px
		min-height 641px
		@media (min-width: scr_sm)
			padding 10px 55px
	&__modal
		t all
		position absolute
		top 0
		right 0
		z-index 10
		width 50%
		opacity 0
		pointer-events none
	@media (min-width: scr_md)
		&__content
			margin-right -7px
		&__side
			margin-left -7px
	.container
		padding 0
		position relative
		overflow-x hidden

.catalog
	&--list
		.filter
			display block !important
		.page
			padding-top 82px
	.page
		@media (min-width: scr_sm)
			padding-top 0px
		&__content
			margin-bottom 15px
			@media (min-width: scr_md)
				margin-bottom 0px
		&__title
			@media (min-width: scr_md)
				border-bottom 0px
		&__nav
			@media (min-width: scr_md)
				border-bottom 1px solid #777d86
				padding-bottom 0px
				padding-top 10px

			.nav
				&__item
					width 100%
					@media (min-width: scr_sm)
						width auto
					@media (min-width: scr_md)
						background-color #dce0e3
						display inline-block
						padding 12px 20px 6px
						margin-right 3px
						font-size 15px
						max-width 165px
						line-height 1.2
						&:nth-child(2)
							max-width 245px
						&:nth-child(4)
							max-width 200px
						&:hover
							background-color alpha(blue, .1)
							color blue_bg
						&--active, &--active:hover
							background-color blue
							color white
					@media (min-width: nav_rows)
						padding 12px 25px 6px
						font-size 17px
						max-width 195px
						&:nth-child(2)
							max-width 290px
						&:nth-child(4)
							max-width 240px



	@media (min-width: scr_lg)
		.page > .container > .row
			> .col-lg-push-8
				left 80%
			> .col-lg-pull-4
				left -20%
			> .col-lg-8
				width 80%
			> .col-lg-4
				width 20%
	.sections
		@extend .index .sections
		@media (min-width: scr_lg)
			margin-bottom 0px
		.section
			background-image url("/layout/images/catalog-section-bg.jpg")
			float left
			@media (min-width: scr_lg)
				min-height 641px
			@media (min-width: scr_lg) and (min-height: 700px)
				min-height calc(100vh - 172px)
			&__logo
				@media (min-width: scr_lg)
					text-align left
					position absolute
					bottom 190px
					left 0px
					padding 0 30px
			&__image
				@media (max-width: scr_lg)
					top 40px
			&__name
				@media (min-width: scr_lg)
					font-size 23px
					font-weight 200
					padding-right 30px
					height 200px
					line-height 145px
					padding-left 30px
					padding-top 90px
					bottom 45px
					span
						line-height 1
						vertical-align top
	.filter
		@extend .index .filter
		position relative
		float left
		width 100%
		t min-height
		display none
		@media (min-width: scr_sm) and (max-width: scr_md)
			display block
			.col-sm-6
				margin-top 17px
			.col-sm-8, .col-sm-4
				margin-top 25px
		.filter__content > .row
			@media (min-width: scr_lg) and (max-width: hide_feedback)
				margin-top 0px
				.col-lg-3:not(.col-sm-4)
					width 100%
				.col-sm-6:nth-child(3), .col-sm-6:nth-child(4)
					margin-top 0px
		@media (min-width: scr_md) and (max-width: scr_lg)
			min-height 100px
			.col-sm-8
				width 75%
			.col-sm-6, .col-sm-4
				width 25%
			.col-sm-6
				margin-top 20px
			.col-sm-8, .col-sm-4
				margin-top 30px
		@media (min-width: scr_lg)
			min-height 641px
			display block
		@media (min-width: scr_lg) and (min-height: 700px)
			min-height calc(100vh - 172px)

		@media (min-width: scr_lg)
			background url("/layout/images/catalog-section-bg.jpg")
			background-size cover
			.col-lg-3, .col-xs-6
				width 100%
				position static
			&__description
				display none
			&__title
				border-bottom 0
				font-size 30px
				white-space inherit
				font-weight 200
				line-height 1
				height auto
				margin-bottom 30px
				.row
					position static
			&__submit
				font-size 23px

				height 50px
				margin-top 10px
			.dropdown
				margin-bottom 20px
				&__trigger
					line-height 55px
					font-size 14px
					height 50px
					padding 0 30px 0 15px
					svg
						top 21px
						right 15px
						width 9px
						height 9px
			&__link
				position absolute
				bottom 0px
				top auto
				left 20px
				height 40px
				line-height 1
				font-size 15px
				span
					color white
					border-line alpha(@color, .5)
			&__content
				position absolute
				top 50%
				width 100%
				t all
				left 0
				padding 0 20px
				transform translateY(-50%)
				padding-bottom 80px
		@media (min-width: nav_rows)
			&__title
				font-size 34px
		@media (min-width: hide_feedback)
			&__title
				font-size 40px
		@media (min-width: 1750px)
			&__title
				font-size 47px
				margin-bottom 35px
			&__submit
				font-size 28px
			.dropdown
				&__trigger
					font-size 16px
					svg
						top 21px
						right 15px
						width 12px
						height 12px
		.dropdown
			@extend .index .filter .dropdown

.params
	margin 30px 0
	float left
	position relative
	width 100%
	&__frame
		float left
		overflow auto
		width 100%
		position relative
		-webkit-overflow-scrolling: touch
	&:after, &:before
		content ""
		width 70px
		height 100%
		position absolute
		top 0
		right 0
		z-index 30
		t opacity
		pointer-events none
		background: linear-gradient(to right, rgba(236,238,241,0) 0%,rgba(236,238,241,1) 100%)
		@media (min-width: scr_sm)
			display none !important
	&:before
		right auto
		left 0
		background: linear-gradient(to right, rgba(236,238,241,1) 0%, rgba(236,238,241,0) 100%)
	&:before
		opacity 0
	&--right
		&:after
			opacity 0
	&--left
		&:before
			opacity 1
	.param
		float left
		width 100%
		font-size 90%
		border-top 1px solid #ccd2d7
		padding-top 8px
		min-width 600px
		& + .param
			margin-top 5px
		&  + .param--title
			margin-top 40px
		&--title
			font-weight 400
			color black
			font-size 105%
			border 0
			a
				color black
				text-decoration none
				background transparent
			& + .param
				border-top-color black
		&__col
			float left
			padding 0 15px
			&:first-of-type
				padding-left 0px

.products
	padding-bottom 40px
	.product
		padding 30px 0 15px
		full-width()
		&__title
			margin-bottom 30px
			@media (min-width: scr_md)
				display table
				table-layout: fixed
				width 100%
				.col-lg-6
					display table-cell
					float none
					vertical-align middle
			h3, h2, h4
				font-weight 300
				margin-top 0px
				margin-bottom 30px
				@media (min-width: scr_md)
					margin-bottom 0px
			a
				color blue_bg
				&:hover
					color blue

		&__image
			& + .product__description
				margin-top 30px
			img
				max-width 100%
		&__description
			p:last-of-type
				margin-bottom 0px

		& + .product:not(.product--vertical)
			margin-top 50px
			border-top 1px solid #cbd2d7
		&__content
			display inline-block
			vertical-align middle
			line-height 1.4
			@media (min-width: scr_sm)
				vertical-align top
		&__divider
			full-width()
			margin-bottom 50px
			&--first
				margin-bottom 0px
			& + .product--vertical
				border-left 0
		&--vertical
			float left
			margin-bottom 30px
			width 100%
			border-top 1px solid #cbd2d7
			line-height 350px
			@media (min-width: scr_md)
				border-left 1px solid #cbd2d7
				border-top 0
				padding 0 50px 0 50px

			&:first-of-type
				border 0 !important
			.product
				&__title
					margin-top 10px
				&__image
					text-align center
					width 100%
					display inline-block
					img
						max-width none
						max-height 350px
			@media (min-width: scr_sm)
				width 100%
			@media (min-width: scr_md)
				width (100/2)%
		&:not(.product--vertical)
			& + .product__divider
				border-top 1px solid #cbd2d7
				margin-top 40px

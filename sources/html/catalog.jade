include includes/header
- active = 0
<body class="catalog">
- var type = ["Пакерно-якорное оборудова&shy;ние", "Копмоновки для газовых скважин", "Клапаны <nobr>и скважинная</nobr> оснастка", "Многопакер&shy;ные компо&shy;новки"]
.wrap
	include includes/toolbar
	.page
		.container
			.row
				.col-lg-8
					.sections
						.row
							each val, key in type
								.col-xs-6.col-sm-3
									a.section(href="/catalog-list.html")
										.section__image(style="background-image: url(/layout/images/catalog-section-#{key+1}.png)")
										.section__name 
											span!= val
				.col-lg-4
					.filter
						.filter__content
							.filter__title
								.row
									.col-xs-6
										| Подбор оборудова&shy;ния
									.col-xs-6.right
										a.filter__link(href="#")
											include ../../public_html/layout/images/svg/pdf.svg	
											span Скачать каталог
							.row
								- var downs = [ "Область применения", "Компоновка", "Перепад давления", "Проходной канал" ]
								each val, key in downs
									.col-sm-6.col-lg-3
										.filter__dropdown.dropdown
											a.dropdown__trigger(href="#")
												span!= val
												include ../../public_html/layout/images/svg/down.svg	
											.dropdown__frame
												a.dropdown__item(href="#") 
													span Тестовый выпадающий элемент
												a.dropdown__item(href="#") 
													span Тестовый выпадающий элемент
												a.dropdown__item(href="#") 
													span Тестовый выпадающий элемент
												a.dropdown__item(href="#") 
													span Тестовый выпадающий элемент
												a.dropdown__item(href="#") 
													span Тестовый выпадающий элемент
												a.dropdown__item(href="#") 
													span Тестовый выпадающий элемент				
							.row
								.col-lg-3.col-sm-4
									a.filter__submit(href="#") Найти
								.col-lg-9.col-sm-8
									.filter__description Для подбора оборудования необходимо выбрать хотя бы один пункт формы. Для более точного поиска необходимо указать максимальное количество параметров.  
			
										
